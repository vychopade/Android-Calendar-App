<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f5f6ff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Left Button -->
    <Button
        android:id="@+id/prevMonthBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#3d4ead"
        android:text="Previous"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"/> <!-- Added padding between top button and top of screen -->

    <!-- Centered Month/Year -->
    <TextView
        android:id="@+id/MonthYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Month Year"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/prevMonthBtn"
        app:layout_constraintEnd_toStartOf="@id/nextMonthBtn"
        android:paddingTop="10dp"
        android:layout_marginTop="24dp"/> <!-- Added padding between MonthYear and top of screen -->

    <!-- Top Right Button -->
    <Button
        android:id="@+id/nextMonthBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#3d4ead"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"/> <!-- Added padding between top button and top of screen -->

    <!-- Calendar Grid -->
    <GridLayout
        android:id="@+id/calendarGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="7"
        android:rowCount="6"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/prevMonthBtn"
        app:layout_constraintBottom_toTopOf="@id/bottomContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/> <!-- Added margin between top buttons and grid -->

    <!-- Bottom Buttons Container -->
    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="60dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnViewCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="140dp"
            android:minHeight="50dp"
            android:backgroundTint="#3d4ead"
            android:text="Categories"
            android:layout_marginEnd="20dp"
            android:paddingHorizontal="20dp"/>

        <Button
            android:id="@+id/btnViewTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="140dp"
            android:minHeight="50dp"
            android:backgroundTint="#3d4ead"
            android:text="Tasks"
            android:layout_marginStart="20dp"
            android:paddingHorizontal="20dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>